{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "semantic-release-test",
  "affected": {
    "defaultBase": "master"
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "lint", "test", "e2e"]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"]
    },
    "test": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"]
    },
    "e2e": {
      "inputs": ["default", "^production"]
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.eslintignore"
      ]
    },
    "release": {
      "executor": "@theunderscorer/nx-semantic-release:semantic-release",
      "options": {
        "repositoryUrl": "https://github.com/mvrana-cen81948/nx-release-please",
        "npm": false,
        "github": true,
        "commitMessage": "chore(release): {projectName}@${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
        "tagFormat": "${PROJECT_NAME}@${version}",
        "branches": [
          "master",
          {"name": "[0-9]+.[0-9]+.[x]"}
        ],
        "gitAssets": ["apps/{projectName}/src/version.json"],
        "preset": "conventionalcommits",
        "presetConfig": {
          "issuePrefixes": ["#"],
          "issueUrlFormat": "https://fujira.csin.cz/browse/{{id}}"
        },
        "changelog": {
          "header": "CHANGELOG - {{projectName }}"
        },
        "plugins": [
          [
            "@google/semantic-release-replace-plugin",
            {
              "replacements": [
                {
                  "files": ["apps/{projectName}/src/version.json"],
                  "from": "\"version\":\".*\"",
                  "to": "\"version\":\"${nextRelease.version}\""
                }
              ]
            }
          ]
        ]
      }
    }
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s",
      "!{projectRoot}/.eslintrc.json"
    ],
    "sharedGlobals": []
  },
  "generators": {
    "@nrwl/angular:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/angular:library": {
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:component": {
      "style": "scss"
    }
  }
}
